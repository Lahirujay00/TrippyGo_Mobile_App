<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:translationY="-10dp"
    tools:context=".location1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="10dp">

        <ScrollView
            android:layout_width="413dp"
            android:layout_height="730dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="726dp"
                tools:layout_editor_absoluteY="1dp">

                <Button
                    android:id="@+id/getStartedButton6"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#008080"
                    android:text="Add to trip "
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorLink="#000000"
                    app:cornerRadius="20px"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.48"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view12" />

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Jungle Beach"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView" />

                <View
                    android:id="@+id/view12"
                    android:layout_width="368dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="12dp"
                    android:background="#D9D9D9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.489"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView43" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="362dp"
                    android:layout_height="546dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineSpacingExtra="4dp"
                    android:padding="8dp"
                    android:text="Jungle Beach in Unawatuna is a secluded tropical paradise, nestled near Rumassala Hill and accessible via a short jungle trek or boat ride.\n\nWith golden sand, calm turquoise waters, and vibrant marine life, it's perfect for swimming, snorkeling, and exploring coral reefs. The underwater ecosystem is rich with colorful fish, sea turtles, and unique coral formations, making it a favorite spot for nature enthusiasts.\n\nThe beach is less crowded than Unawatuna, offering a peaceful escape with a few small cafés serving fresh seafood and drinks. These cafés are known for their relaxed vibe and delicious local cuisine, including grilled fish and tropical fruit juices.\n\nSurrounded by lush greenery and occasional wildlife, it’s an ideal spot for relaxation. Monkeys, exotic birds, and butterflies are often spotted in the area, adding to the natural charm. Nearby, the Japanese Peace Pagoda provides stunning panoramic views of the coastline, adding a touch of cultural and spiritual significance to this hidden gem. The pagoda is a serene place to reflect and enjoy the beauty of the surrounding landscape.\n\nWhether you're looking for adventure, relaxation, or a bit of both, Jungle Beach offers a unique and unforgettable experience."
                    android:textColor="#A8A8A8"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView44" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Unawatuna, Sri Lanka"
                    android:textColor="#A8A8A8"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.139"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView36" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="385dp"
                    android:layout_height="259dp"
                    android:background="@color/white"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="428dp"
                        android:layout_height="277dp"
                        android:scaleType="centerCrop"
                        android:scaleX="1"
                        android:visibility="visible"
                        app:srcCompat="@drawable/junglebeachsrilanka" />

                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="408dp"
        android:layout_height="83dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/view7"
            android:layout_width="385dp"
            android:layout_height="78dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/upper_rounded_taskbar"
            android:translationX="-25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="59dp"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:translationZ="21dp"
            app:layout_constraintBottom_toBottomOf="@+id/view7"
            app:layout_constraintStart_toStartOf="@+id/view7"
            app:layout_constraintTop_toTopOf="@+id/view7"
            app:srcCompat="@drawable/hhmo" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="59dp"
            android:layout_height="46dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:translationZ="21dp"
            app:layout_constraintBottom_toBottomOf="@+id/view7"
            app:layout_constraintStart_toEndOf="@+id/imageView18"
            app:layout_constraintTop_toTopOf="@+id/view7"
            app:srcCompat="@drawable/tripss" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="59dp"
            android:layout_height="46dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:translationZ="21dp"
            app:layout_constraintBottom_toBottomOf="@+id/view7"
            app:layout_constraintStart_toEndOf="@+id/imageView19"
            app:layout_constraintTop_toTopOf="@+id/view7"
            app:srcCompat="@drawable/savess" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="59dp"
            android:layout_height="47dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="16dp"
            android:translationZ="21dp"
            app:layout_constraintBottom_toBottomOf="@+id/view7"
            app:layout_constraintStart_toEndOf="@+id/imageView20"
            app:layout_constraintTop_toTopOf="@+id/view7"
            app:srcCompat="@drawable/profilee" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>