<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#55000000" /> <!-- Shadow color -->
            <corners android:radius="10dp" /> <!-- Reduced corner radius -->
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/> <!-- Reduced border size -->
        </shape>
    </item>

    <!-- Background -->
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FFFFFF"/> <!-- Background color -->
            <corners android:radius="10dp"/> <!-- Reduced corner radius -->
        </shape>
    </item>
</layer-list>